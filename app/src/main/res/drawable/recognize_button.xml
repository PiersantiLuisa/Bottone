<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="ring">
            <solid
                android:color="#8e64c1" />
            <stroke
                android:width="1dp"
                android:color="#7d38d1" />
            <corners
                android:radius="100dp"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#8e64c1"
                android:endColor="#7d38d1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7d38d1" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>